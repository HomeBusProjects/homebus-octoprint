[Unit]
Description=HomeBus Octoprint publisher
After=network.target

[Service]
Type=simple

User=homebus
WorkingDirectory=/home/homebus/homebus-octoprint

ExecStart=/home/homebus/.rbenv/bin/rbenv exec bundle exec homebus-octoprint.rb
TimeoutSec=30

Restart=always

[Install]
WantedBy=multi-user.target

